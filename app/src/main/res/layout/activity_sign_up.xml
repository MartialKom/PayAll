<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:background="@drawable/fondblanc">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#DF4C09"
        android:id="@+id/entete"
        >

        <ImageView
            android:layout_width="93dp"
            android:layout_height="70dp"
            android:layout_marginTop="-10dp"  />
        //android:src=""

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PayAll"
            android:textSize="35dp"
            android:layout_marginLeft="45dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#000000"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="inscription"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="#000000"

            />

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/entete"
        android:id="@+id/lnom"
        android:hint="Entrez votre nom"
        android:textColorHint="#F8F5F5"
       android:layout_marginTop="12dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#7C3D29"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="#C7BCBC"
            android:textSize="20dp"
            android:drawableLeft="@drawable/ic_create_black_24dp"
            android:drawablePadding="15dp"
            android:id="@+id/nom"
            />
    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lnom"
        android:hint="Entrez votre prenom"
        android:textColorHint="#F8F5F5"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background= "#7C3D29"
        android:id="@+id/lprenom"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:drawableLeft="@drawable/ic_create_black_24dp"
            android:drawablePadding="15dp"
            android:textColor="#C7BCBC"
            android:textSize="20dp"
            android:id="@+id/prenom"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lprenom"
        android:hint="Votre date de naissance"
        android:textColorHint="#F8F5F5"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background= "#7C3D29"
        android:id="@+id/ldate"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:drawableLeft="@drawable/ic_date_range_black_24dp"
            android:drawablePadding="15dp"
            android:textColor="#C7BCBC"
            android:inputType="date"
            android:textSize="20dp"
            android:id="@+id/date"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ldate"
        android:hint="Votre numero de CNI"
        android:textColorHint="#F8F5F5"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background= "#7C3D29"
        android:id="@+id/lnumcni"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:drawableLeft="@drawable/ic_create_black_24dp"
            android:drawablePadding="15dp"
            android:textColor="#C7BCBC"
            android:inputType="number"
            android:textSize="20dp"
            android:id="@+id/numcni"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lnumcni"
        android:hint="Votre numero de telephone"
        android:textColorHint="#F8F5F5"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background= "#7C3D29"
        android:id="@+id/lnumtel"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:drawableLeft="@drawable/ic_smartphone_black_24dp"
            android:drawablePadding="15dp"
            android:textColor="#C7BCBC"
            android:inputType="phone"
            android:textSize="20dp"
            android:id="@+id/numtel"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lnumtel"
        android:hint="Votre mot de passe"
        android:textColorHint="#F8F5F5"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background= "#7C3D29"
        android:id="@+id/lpass"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:drawablePadding="15dp"
            android:textColor="#C7BCBC"
            android:inputType="textPassword"
            android:textSize="20dp"
            android:id="@+id/pass"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lpass"
        android:hint="Confirmez votre mot de passe"
        android:textColorHint="#F8F5F5"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background= "#7C3D29"
        android:id="@+id/lcpass"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:drawableLeft="@drawable/ic_create_black_24dp"
            android:drawablePadding="15dp"
            android:textColor="#C7BCBC"
            android:inputType="textPassword"
            android:textSize="20dp"
            android:id="@+id/cpass"/>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/layoutB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lcpass"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp">

        <Button
            android:id="@+id/backbtn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:backgroundTint="#8B5C46"
            android:text="Retour"
            android:textColor="#29110A"
            android:textStyle="bold"

            />

        <Button
            android:id="@+id/loginbtn"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="#DF4C09"
            android:text="Valider"
            android:textColor="#000000"
            android:textStyle="bold"

            />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutB"
        android:layout_centerHorizontal="true"

        />

</RelativeLayout>