<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Acceuil"
    android:background="@drawable/fondblanc">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PayAll portal client"
        android:textColor="#DF4C09"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="45dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:fontFamily="serif-monospace"
        android:id="@+id/title"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BIENVENUE !"
        android:layout_marginTop="100dp"
        android:textColor="#DF4C09"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="250dp"
        android:background="#4D3B3B"
        android:hint=" code secret"
        android:textColor="#C7BCBC"
        android:textColorHint="#F8F5F5"
        android:id="@+id/code"/>

<Button
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="300dp"
    android:layout_gravity="center_horizontal"
    android:text="Consulter le solde"
    android:backgroundTint="#DF4C09"
    android:textColor="#000000"
    android:hint="code"
    android:textColorHint="#F8F5F5"
    android:onClick="consulterSolde"
    />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="400dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solde: "
        android:textColor="#9B390D"
        android:textSize="25dp"
        android:textStyle="italic"
        android:layout_marginLeft="65dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textColor="#926666"
        android:textSize="30dp"
        android:textStyle="bold"
        android:id="@+id/solde"
        />
</LinearLayout>




</FrameLayout>