<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Acceuil"
    android:background="@drawable/fondblanc">


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lnom"
        android:hint="Entrez votre nom"
        android:textColorHint="#F8F5F5"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#7C3D29"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="#C7BCBC"
            android:textSize="20dp"
            android:drawableLeft="@drawable/ic_create_black_24dp"
            android:drawablePadding="15dp"
            android:id="@+id/Mnom"
            />
    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Entrez votre prenom"
        android:textColorHint="#F8F5F5"
        android:layout_marginTop="88dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background= "#7C3D29"
        android:id="@+id/lprenom"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:drawableLeft="@drawable/ic_create_black_24dp"
            android:drawablePadding="15dp"
            android:textColor="#C7BCBC"
            android:textSize="20dp"
            android:id="@+id/Mprenom"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Votre date de naissance"
        android:textColorHint="#F8F5F5"
        android:layout_marginTop="158dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background= "#7C3D29"
        android:id="@+id/ldate"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:drawableLeft="@drawable/ic_date_range_black_24dp"
            android:drawablePadding="15dp"
            android:textColor="#C7BCBC"
            android:inputType="date"
            android:textSize="20dp"
            android:id="@+id/Mdate"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ldate"
        android:hint="Votre numero de CNI"
        android:textColorHint="#F8F5F5"
        android:layout_marginTop="228dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background= "#7C3D29"
        android:id="@+id/lnumcni"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:drawableLeft="@drawable/ic_create_black_24dp"
            android:drawablePadding="15dp"
            android:textColor="#C7BCBC"
            android:inputType="number"
            android:textSize="20dp"
            android:id="@+id/Mnumcni"/>
    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lnumcni"
        android:hint="Votre nouveau mot de passe"
        android:textColorHint="#F8F5F5"
        android:layout_marginTop="368dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background= "#7C3D29"
        android:id="@+id/lpass"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:drawablePadding="15dp"
            android:textColor="#C7BCBC"
            android:inputType="textPassword"
            android:textSize="20dp"
            android:id="@+id/Mpass"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lpass"
        android:hint="Confirmez ce mot de passe"
        android:textColorHint="#F8F5F5"
        android:layout_marginTop="438dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background= "#7C3D29"
        android:id="@+id/lcpass"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:drawableLeft="@drawable/ic_create_black_24dp"
            android:drawablePadding="15dp"
            android:textColor="#C7BCBC"
            android:inputType="textPassword"
            android:textSize="20dp"
            android:id="@+id/Mcpass"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/validModif"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="520dp"
        android:backgroundTint="#DF4C09"
        android:text="Valider"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:onClick="modifCompte"
        />

    <ProgressBar
        android:id="@+id/progressBar3"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="570dp"
        android:layout_gravity="center_horizontal"

        />


</FrameLayout>