<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/fondblanc"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#DF4C09"
        >

        <ImageView
            android:layout_width="93dp"
            android:layout_height="70dp"
            android:layout_marginTop="-10dp"  />
            //android:src=""

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PayAll"
            android:textColor="#000000"
            android:textSize="35dp"
            android:layout_marginLeft="50dp"
            android:textStyle="bold"
            android:layout_gravity="center"


            />

    </LinearLayout>


    <TextView
        android:id="@+id/connexion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connexion"
        android:textColor="#DF4C09"
        android:textSize="35dp"
        android:textStyle="bold"

        android:gravity="center"
        android:layout_marginTop="120dp"
        android:fontFamily="serif-monospace"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:layout_below="@+id/connexion"
        android:background="#333030"
        android:hint="Nom d'Utilisateur"
        android:textColorHint="#ffffff"
        android:textColor="#D2D7DA"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:drawableRight="@drawable/ic_person_outline_black_24dp"
        android:drawablePadding="20dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:layout_below="@+id/username"
        android:background="#333030"
        android:hint="Mot De Passe"
        android:textColorHint="#ffffff"
        android:textColor="#D2D7DA"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:drawableRight="@drawable/ic_lock_outline_black_24dp"
        android:drawablePadding="20dp"
        android:inputType="textPassword"
        />


    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/loginbtn"
        android:layout_below="@id/password"
        android:text="Se Connecter"
        android:backgroundTint="#DF4C09"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="#ffff"
        />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/loginbtn"
    android:layout_marginLeft="30dp"
    android:id="@+id/lautres">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/others"
        android:layout_marginLeft="5dp"
        android:text="Creer un nouveau compte?"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginRight="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inscription"
        android:text="S'inscrire"
        android:textStyle="italic"
        android:textColor="#8A120B"
        android:textSize="20dp"

        />
</LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/autres"
        android:layout_above="@+id/iconesocial"
        android:text="Ou se connecter avec"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textColor="#494242"
        android:textSize="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/iconesocial"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="20dp"
            android:src="@drawable/google"
            />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="20dp"
            android:src="@drawable/fb"
            />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lautres"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"/>
</RelativeLayout>